{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": ["jest"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/assets"
  ]
}
