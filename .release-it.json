{
    "hooks": {
        "before:init": ["npm run build"],
        "after:github:release": "git push -u origin"
    },
    "git": {
        "tagName": "v${version}",
        "addUntrackedFiles": true,
        "requireCleanWorkingDir": false,
        "pushArgs": "-u github"
    },
    "github": {
        "release": true,
        "skipChecks": true
    },
    "npm": {
        "publish": true,
        "access": "public"
    }
}